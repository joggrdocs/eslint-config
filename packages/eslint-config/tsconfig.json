{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "TypeScript Configuration",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "inlineSources": false,
    "strictNullChecks": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "sourceMap": true,
    "preserveWatchOutput": true,
    "skipLibCheck": true,
    "strict": true,
    "baseUrl": ".",
    "outDir": "dist",
    "rootDir": "packages/eslint-config/src",
    "composite": true,
    "isolatedModules": false,
    "moduleResolution": "node",
    "lib": [
      "ES2023"
    ],
    "paths": {
      "@lint/*": [
        "packages/eslint-config/src/*"
      ]
    }
  },
  "typeRoots": [
    "node_modules/@types",
    "src/*.d.ts"
  ],
  "include": [
    "packages/eslint-config/src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/__tests__/**"
  ]
}